{
  "name": "vue-use-modal",
  "description": "vue-use-modal is vue3(vue-next) plugin that provide easy use of modal. It is not only component based but also lets using modal either asynchronous or synchronous behavior.",
  "keywords": ["modal", "dialog", "vue-plugin", "modal-plugin", "dialog-plugin", "usemodal", "usedialog", "vue3-hooks"],
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/eddie0329/useModal.git",
  "author": "Eddie <40482274+eddie0329@users.noreply.github.com>",
  "files": [
    "dist/*"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "main": "./dist/use-modal.umd.js",
  "module": "./dist/use-modal.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/use-modal.es.js",
      "require": "./dist/use-modal.umd.js"
    }
  },
  "scripts": {
    "dev": "vite --config playground/vite.config.js",
    "build": "rimraf ./dist && vite build && vue-tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "vue": "^3.2.29"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vitejs/plugin-vue": "^2.2.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "typescript": "^4.5.5",
    "vite": "^2.8.4",
    "vue-tsc": "^0.31.4"
  }
}
